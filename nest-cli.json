{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      "assets/certs/**/*",
      "assets/i18n/**/*",
      "**/*.hbs",
      "**/*.png",
      "**/*.svg",
      "**/*.jpg",
      "**/*.ttf",
      "**/*.pdf"
    ],
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "introspectComments": true
        }
      }
    ]
  }
}
